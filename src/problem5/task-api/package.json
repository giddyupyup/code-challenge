{
  "name": "task-api",
  "version": "1.0.0",
  "description": "A Crude Server",
  "scripts": {
    "start": "node -r dotenv-flow/config dist/src/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node -r dotenv-flow/config src/server.ts\" --delay 250",
    "build": "rimraf dist/ && tsc && npm run prisma:generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:test:migrate": "DATABASE_URL=postgresql://test_user:test_password@localhost:5432/task_api_test?schema=public prisma migrate dev --name init",
    "prisma:reset:dev": "DATABASE_URL=postgresql://task_user:task_password@localhost:5432/task_api?schema=public prisma migrate reset --force",
    "prisma:reset:test": "DATABASE_URL=postgresql://test_user:test_password@localhost:5432/task_api_test?schema=public prisma migrate reset --force",
    "docker:build": "docker build -t task-api .",
    "docker:run": "docker-compose up",
    "test": "npm run prisma:test:migrate && jest --runInBand",
    "test:unit": "npm run prisma:test:migrate && jest --runInBand --testPathPattern=unit",
    "test:e2e": "npm run prisma:test:migrate && jest --runInBand --testPathPattern=e2e",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.1",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.2",
    "prisma": "^6.4.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.7.3"
  }
}
