{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src", "./tests"],
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"],
  "files": ["./src/types/index.d.ts"]
}
